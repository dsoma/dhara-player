{
    "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noConstAssign": "error",
                "noUnusedVariables": "error"
            },
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "useConst": "error"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "es5",
            "semicolons": "always"
        }
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "src/**/*.ts",
            "src/**/*.js"
        ]
    }
}
