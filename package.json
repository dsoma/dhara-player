{
    "name": "dhara-player",
    "version": "0.0.1",
    "description": "Dhara Player",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "start": "tsc && node dist/src/index.js",
        "clean": "rm -rf dist/",
        "build": "npm run clean && webpack --env mode=production && npm run build:css",
        "build:dev": "npm run clean && webpack --env mode=development --progress && npm run build:css",
        "build:css": "npx @tailwindcss/cli -i demo/css/input.css -o dist/css/styles.css",
        "dev": "npm run build:dev && webpack serve --open",
        "test-prod": "npm run build && npx serve dist",
        "lint": "biome lint .",
        "lint:fix": "biome lint --write .",
        "prepare": "husky",
        "test": "echo \"No test specified yet\""
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:dsoma/dhara-player.git"
    },
    "author": "Deepak Somashekhara",
    "license": "Apache-2.0",
    "devDependencies": {
        "@biomejs/biome": "^2.1.2",
        "@tailwindcss/cli": "^4.1.11",
        "copy-webpack-plugin": "^13.0.0",
        "html-webpack-plugin": "^5.6.3",
        "husky": "^9.1.7",
        "tailwindcss": "^4.1.11",
        "ts-loader": "^9.5.2",
        "typescript": "^5.7.3",
        "webpack": "^5.98.0",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.2"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "biome lint"
        ]
    },
    "dependencies": {
        "events": "^3.3.0",
        "fast-xml-parser": "^5.2.5",
        "loglevel": "^1.9.2"
    }
}
